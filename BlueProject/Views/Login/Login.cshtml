@model dynamic  
@{
    string msg = ViewData["msg"] as string;
}

@if (string.IsNullOrWhiteSpace(msg)==false)
{
    <div class="alert alert-danger">@msg</div>
}

<form id="form1" method="post" action="/login/login" class="mt-4">
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label class="text-dark" for="uname">Username</label>
                <input name="user_name" class="form-control" type="text" placeholder="enter your username"/>
            </div>
        </div>
        <div class="form-group">
            <label class="text-dark" for="pwd">Password</label>
            <input name="password" class="form-control" type="text" placeholder="enter your Password"/>
        </div>
        <div class="col-lg-12 text-center">
            <button type="submit" class="btn btn-block  btn-dark">Sign In</button>

        </div>
        <div class="col-lg-12 text-center mt-4-5">
            Don't have an account? <a href="#" class="text-danger">Sign up</a>
        </div>
    </div>

</form>